@inherits LayoutComponentBase
@using Services
@inject AuthService AuthService
@inject IJSRuntime _jsRuntime

<PageTitle>EVision Admin Dashboard</PageTitle>

<div class="admin-dashboard">
    <!-- Sidebar Section -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <h2>EVision</h2>
        </div>
        <NavMenu />
    </aside>

    <!-- Main Content Section -->
    <main class="main-content">
        <!-- Top Navigation Bar -->
        <div class="top-bar px-4">
            <div class="top-bar-left">
                <h3>Welcome, @(_isLoggedIn ? "Admin" : "Guest")</h3>
            </div>
            <div class="top-bar-right">
                @if (!_isLoggedIn)
                {
                    <NavLink class="btn btn-primary" href="login">Login</NavLink>
                }
                else
                {
                    <button class="btn btn-danger" @onclick="Logout">Logout</button>
                }
            </div>
        </div>

        <!-- Page Content -->
        <section class="content px-4">
            @Body <!-- This renders the content of AdminLogin.razor -->
        </section>
    </main>
</div>

@code {
    private bool _isLoggedIn;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await CheckLoginStatus();
            StateHasChanged(); // Notify the component to re-render
        }
    }

    private async Task CheckLoginStatus()
    {
        _isLoggedIn = await AuthService.IsLoggedIn();
    }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        _isLoggedIn = false; // Update local login status
        Navigation.NavigateTo(""); // Refresh the page or navigate to a specific page
    }
}
